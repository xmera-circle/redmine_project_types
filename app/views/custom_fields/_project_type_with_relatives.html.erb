<div id=<%= project_type.name %> class='project-type-item'>
  <%= tag.label do %>
  <%= check_box_tag('custom_field[project_ids][]', project_type.id, project_type_ids.include?(project_type.id)) + ' ' + h(project_type.name) %>
  <%= toggle_checkboxes_text_link(' (+/-)', "##{project_type.name} input[type=checkbox]") if project_type.relatives.any? %>
  <% end %>
  <% if project_type.relatives.any? %>
    <fieldset class="collapsible hide-when-print collapsed">
      <legend onclick="toggleFieldset(this);" class="icon icon-collapsed">
        <%= l(:label_associated_project_plural)%>
      </legend>
      <div style="display: none;">
        <%= tag.ul class: 'projects root' do %>
          <% project_type.relatives.each do |relative| %>
            <%= tag.li class: 'root' do %>
              <%= content_tag('label', check_box_tag('custom_field[project_ids][]', relative.id, project_type_ids.include?(relative.id), :id => nil) + ' ' + h(relative.name)) %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </fieldset>
  <% end %>
</div>