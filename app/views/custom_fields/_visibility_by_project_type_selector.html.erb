<% if ProjectTypes.any? %>
  <fieldset class="box">
    <legend>
      <%= toggle_checkboxes_link("#custom_field_project_type_ids input[type=checkbox]:enabled") %>
      <%= l(:label_project_type_plural) %>
    </legend>
    <p><%= f.check_box :is_for_all, :data => {:disables => '#custom_field_project_type_ids input'} %></p>

    <div id="custom_field_project_type_ids">
      <% project_type_ids = @custom_field.project_type_ids.to_a %>
      <%= tag.ul class: 'projects root' do %>
        <% ProjectType.all.each do |project_type| %>
          <%= tag.li class: 'root' do %>
            <%= content_tag('label', check_box_tag('custom_field[project_type_ids][]', project_type.id, project_type_ids.include?(project_type.id), :id => nil) + ' ' + h(project_type.name)) %>
          <% end %>
        <% end %>
      <% end %>
      <%= hidden_field_tag('custom_field[project_type_ids][]', '', :id => nil) %>
    </div>
  </fieldset>
<% end %>