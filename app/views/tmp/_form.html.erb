<%= error_messages_for 'project_type' %>

<div class="box tabular settings">
<p><%= f.text_field :name, size: 30, :required => true %></p>
<p><%= f.text_area :description, size: "5x5" %></p>
<p><%= f.check_box :identifier, :label => :setting_sequential_project_identifiers %></p>
<p><%= f.check_box :is_public %></p>
<p><%= label(:project_types, :default_user_role_id,l(:label_project_type_new_project_user_role_ids))%><%= f.collection_select(:default_user_role_id, Role.find_all_givable.collect, :id, :name, :include_blank => "--- #{l(:actionview_instancetag_blank_option)} ---") %> </p>
<%= call_hook(:view_project_types_form_middle, :project => @project, :f => f) %>
</div>

<div class="box tabular settings" id="default-modules">
<p><%= default_modules_multiselect(@project_type.id, Redmine::AccessControl.available_project_modules.collect {|m| [l_or_humanize(m, :prefix => "project_module_"), m.to_s] }, :label_project_type_default_modules ) %></p>
</div>

<div class="box tabular settings" id="default-trackers">
<p><%= default_trackers_multiselect(@project_type.id, Tracker.sorted.collect {|t| [t.name, t.id] }, :label_project_type_default_trackers ) %></p>

</div>
